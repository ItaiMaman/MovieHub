<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviehub">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieHub">
        <activity
            android:name="com.example.moviehub.Rooms.SwipeMatchActivity"
            android:exported="false" />
        <activity
            android:name="com.example.moviehub.Rooms.WaitingRoomActivity"
            android:exported="false" />
        <activity
            android:name="com.example.moviehub.Rooms.RoomActivity"
            android:exported="false" />
        <activity
            android:name="com.example.moviehub.AddEventActivity"
            android:exported="false" />
        <activity
            android:name="com.example.moviehub.profile.ProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.moviehub.FriendsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.moviehub.SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.moviehub.SignUpScreen"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.moviehub.LoginScreen"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.moviehub.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>